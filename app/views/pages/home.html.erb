<div class="main-banner">
    <h1>ESCALE</h1>
    <h3>Find your next train adventure</h3>

  <%= simple_form_for :search, url: trips_path, method: :get do |f| %>
    <div class="search-form-control form-group mb-3 mt-5">
      <input class="form-control string required" type="text" name="search[query]" id="search_query" />
      <button name="button" type="submit" class="btn btn-flat">
      <p class="search-placeholder"><i class="fas fa-search"></i></p>
      </button>
    </div>
  <% end %>
</div>

<div class="mt-5 mx-5">
  <h2>Recommended Categories ___</h2>
</div>

<div class="container">
  <div class="cards-category-grid">
    <div class="card-category">
      <img class="card-category-background" src="https://images.unsplash.com/photo-1557177324-56c542165309?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80">
      <div class="card-category-content">
        <p>Category</p>
        <h3>Capital Cities</h3>
      </div>
    </div>
    <div class="card-category">
      <img class="card-category-background" src="https://images.unsplash.com/photo-1557187666-4fd70cf76254?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60">
      <div class="card-category-content">
        <p>Category</p>
        <h3>Beach</h3>
      </div>
    </div>
    <div class="card-category">
      <img class="card-category-background" src="https://images.unsplash.com/photo-1556680262-9990363a3e6d?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60">
      <div class="card-category-content">
        <p>Category</p>
        <h3>Rural Escape</h3>
      </div>
    </div>
    <div class="card-category">
      <img class="card-category-background" src="https://images.unsplash.com/photo-1557004396-66e4174d7bf6?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=800&q=60">
      <div class="card-category-content">
        <p>Category</p>
        <h3>Mountains</h3>
      </div>
    </div>
  </div>
</div>

<div class="mt-2 mx-5">
  <h2>Recently created ___</h2>
</div>

<div class="container">
  <div class="cards-index-grid">
    <% @trips.each do |trip| %>
      <%= link_to trip_path(trip), class: "card-index" do %>
        <img class="card-index-background" src="https://images.unsplash.com/photo-1557177324-56c542165309?ixlib=rb-1.2.1&auto=format&fit=crop&w=1950&q=80">
        <%#= image_tag trip.photo, class: "card-index-background" %>
        <div class="card-index-content">
          <p>Trip</p>
          <h3><%= trip.title %></h3>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
