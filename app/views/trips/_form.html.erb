<%= simple_form_for @trip do |f| %>
  <%= f.input :title %>
  <%= f.input :description %>
  <%= f.input :category,
                    collection: ["City", "Capitals", "Beach", "Mountain", "Rural"],
                    as: :check_boxes,
                    input_html: { class: "tag-selector" },
                    item_wrapper_class: 'tag-item' %>
  <%= f.button :submit %>
<% end %>
